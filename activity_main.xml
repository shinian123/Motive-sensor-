<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/height_edit"
            android:hint="请输入身高"
            android:ems="10"
            android:inputType="numberDecimal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="厘米"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sure"
            android:onClick="sure"
            android:text="确认"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/steplength_text"
        android:text="您的步长："
        android:layout_below="@id/linearlayout1"/>
    <TextView
        android:layout_below="@id/steplength_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前步数:0"
        android:id="@+id/current_step_count" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_restart"
        android:text="restart"
        android:onClick="restart"
        android:layout_below="@id/current_step_count"
        />
    <Button
        android:text="校准"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_justify"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post"
        android:text="开始上传"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_process"
        android:text="进度显示"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_accelerator"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_linear"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_gravity"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_canvas"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
